<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ViewSwitcher
        android:id="@+id/vs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="start"
                    android:textSize="50sp"
                    android:textColor="@color/colorAccent"
                    android:text="@string/tic"
                    android:layout_margin="@dimen/margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:textSize="50sp"
                    android:textColor="@color/colorAccent"
                    android:text="@string/tac"
                    android:layout_margin="@dimen/margin"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="end"
                    android:textSize="50sp"
                    android:textColor="@color/colorAccent"
                    android:text="@string/toe"
                    android:layout_margin="@dimen/margin"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="@dimen/margin"
                android:background="@drawable/button"
                android:text="@string/start"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:context="com.cleverchuk.tictactoe.Game">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/i"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="@dimen/side"
                    android:layout_height="@dimen/side"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/t_size" />

                <Button
                    android:id="@+id/ii"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="@dimen/side"
                    android:layout_height="@dimen/side"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/t_size" />

                <Button
                    android:id="@+id/iii"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="@dimen/side"
                    android:layout_height="@dimen/side"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/t_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/iv"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="@dimen/side"
                    android:layout_height="@dimen/side"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/t_size" />

                <Button
                    android:id="@+id/v"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="@dimen/side"
                    android:layout_height="@dimen/side"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/t_size" />

                <Button
                    android:id="@+id/vi"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="@dimen/side"
                    android:layout_height="@dimen/side"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/t_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/vii"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="@dimen/side"
                    android:layout_height="@dimen/side"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/t_size" />

                <Button
                    android:id="@+id/viii"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="@dimen/side"
                    android:layout_height="@dimen/side"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/t_size" />

                <Button
                    android:id="@+id/ix"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="@dimen/side"
                    android:layout_height="@dimen/side"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/t_size" />
            </LinearLayout>
        </LinearLayout>
    </ViewSwitcher>
</layout>